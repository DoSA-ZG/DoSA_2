@page
@model RPPP_WebApp.Views.Home.StartModel
@{
    Layout = "_Layout";
}

@{
    ViewBag.Title = "Get Started";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Choose Your Action</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .container {
            text-align: center;
            max-width: 600px;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px; /* Adjusted margin to make room for the menu bar */
        }

        h1 {
            color: #4CAF50;
        }

        p {
            color: #555;
        }

        .action-buttons {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin-top: 20px;
        }

        .action-button {
            margin: 10px;
            padding: 15px 30px; /* Adjusted padding for a consistent button size */
            font-size: 18px;
            font-weight: bold;
            text-align: center;
            text-decoration: none;
            background-color: #4CAF50;
            color: #fff;
            border-radius: 5px;
            transition: background-color 0.3s;
            cursor: pointer;
        }

            .action-button:hover {
                background-color: #45a049;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Choose Your Action</h1>
        <p>Select an action to proceed:</p>

        <div class="action-buttons">
            <a href="@Url.Action("Index", "Plants")" class="action-button">Manage Plant</a>
            <a href="@Url.Action("Index", "Plots")" class="action-button">Manage Plot</a>
            <a href="@Url.Action("Index", "Person")" class="action-button">Manage Person</a>
            <a href="@Url.Action("Index", "Request")" class="action-button">Manage Request</a>
            <a href="@Url.Action("Index", "Harvest")" class="action-button">Manage Harvest</a>
            <a href="@Url.Action("Index", "Lease")" class="action-button">Manage Lease</a>
            <a href="@Url.Action("Index", "Soil")" class="action-button">Manage Soil</a>
            <a href="@Url.Action("Index", "Sale")" class="action-button">Manage Sale</a>
            <a href="@Url.Action("Index", "KnownCustomer")" class="action-button">Manage Known Customer</a>
        </div>
        <div>
            <a href="@Url.Action("Index", "Home")">Back</a>
        </div>
    </div>
</body>
</html>





