@using RPPP_WebApp.Models;
@model RPPP_WebApp.ViewModels.RequestViewModel
@{
    ViewBag.Title = "Request Details";
}
<h2>Request Details</h2>



<table class="table table-sm table-striped table-hover">
     <a asp-action="Edit"
           asp-route-id="@Model.IdRequest"
           class="btn btn-sm btn-warning" title="Edit">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
            <i class="fas fa-edit"></i>
            <a class="btn btn-sm btn-primary cancel"
               asp-action="Index"
               asp-route-page="@ViewBag.Page"
               asp-route-sort="@ViewBag.Sort"
               asp-route-ascending="@ViewBag.Ascending"
               title="Cancel">
                <i class="fas fa-undo-alt"></i>
            </a>
    </a>
    <thead>
        <tr>
            <th>
                <a>
                    Request Id
                </a>
            </th>
            <th>
                <a>
                    Species Name
                </a>
            </th>
            <th>
                <a>
                    Request Date
                </a>
            </th>
            <th>
                <a>
                    Quantity
                </a>
            </th>
            <th>
                <a>
                    Price
                </a>
            </th>
            <th>
                <a>
                    Id Person
                </a>
            </th>
            <th>
                <a>
                    Request Status
                </a>
            </th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        <tr>
            <td class="text-center">@Model.IdRequest</td>
            <td class="text-center">@Model.SpeciesAsked</td>
            <td class="text-center">@Model.DateRequest</td>
            <td class="text-center">@Model.QuantityAsked</td>
            <td class="text-center">@Model.PriceAsked</td>
            <td class="text-center">@Model.IdPerson</td>
            <td class="text-center">@Model.StatusRequest</td> 
        </tr>

    </tbody>
</table>
<hr>
<h2>Person</h2>
<table class="table table-sm table-striped table-hover">

    <thead>
        <tr>
            <th>
                <a>
                    Person Id
                </a>
            </th>
            <th>
                <a>
                    FirstName
                </a>
            </th>
            <th>
                <a>
                    LastName
                </a>
            </th>
            <th>
                <a>
                    Address
                </a>
            </th>
            <th>
                <a>
                    Number
                </a>
            </th>
            <th>
                <a>
                    Mail
                </a>
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var person in Model.KnownCustomers)
            {
            <tr>
                <td class="text-center">@person.IdPerson</td>
                <td class="text-center">@person.FirstName</td>
                <td class="text-center">@person.LastName</td>
                <td class="text-center">@person.Adresse</td>
                <td class="text-center">@person.Number</td>
                <td class="text-center">@person.Mail</td>
            </tr>
            }

        </tr>
    </tbody>
</table>
@section styles{
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css" />
}
