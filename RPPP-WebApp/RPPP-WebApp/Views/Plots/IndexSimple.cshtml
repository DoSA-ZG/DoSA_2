@using RPPP_WebApp.Models;
@model IEnumerable<Plot>
@{
    ViewData["Title"] = "Plot list";
}
<h2>Plot list</h2>
<a asp-action="Create">Add new plot</a>

<table class="table table-sm table-striped table-hover" id="table-plot">
    <thead>
        <tr>
            <th>Plot Id</th>
            <th>Plot Name</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var plot in Model)
        {
            <tr>
                <td class="text-center">@plot.IdPlot</td>
                <td class="text-left">@plot.PlotName</td>
              
            </tr>
        }
    </tbody>
</table>

@section styles{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/dataTables.bootstrap5.min.css" />
}

@section scripts{
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#table-plot').DataTable();
        });
    </script>
}