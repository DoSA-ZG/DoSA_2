@using RPPP_WebApp.Models;
@model Plant
@{
    ViewBag.title = "Add Plant";
}

<h2>Add new Plant</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="IdPlant" class="form-label"></label>
        <input asp-for="IdPlant" class="form-control" />
        <div class="form-text"><span asp-validation-for="IdPlant" class="text-danger"></span></div>
    </div>
    <div class="mb-3">
        <label asp-for="Species " class="form-label"></label>
        <input asp-for="Species " class="form-control" />
        <div class="form-text"><span asp-validation-for="Species " class="text-danger"></span></div>
    </div>
    <div class="mb-3">
        <label asp-for="SpeciesGroup" class="form-label"></label>
        <input asp-for="SpeciesGroup" class="form-control" />
        <div class="form-text"><span asp-validation-for="SpeciesGroup" class="text-danger"></span></div>
    </div>

    <div class="mb-3">
        <label asp-for="FruitVegetable" class="form-label"></label>
        <input asp-for="FruitVegetable" class="form-control" />
        <div class="form-text"><span asp-validation-for="FruitVegetable" class="text-danger"></span></div>
    </div>

    <div class="mb-3">
        <label asp-for="Origin" class="form-label"></label>
        <input asp-for="Origin" class="form-control" />
        <div class="form-text"><span asp-validation-for="Origin" class="text-danger"></span></div>

    </div>
    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <div class="form-text"><span asp-validation-for="Quantity" class="text-danger"></span></div>

    </div>
    <div class="mb-3">
        <label asp-for="StartDate" class="form-label"></label>
        <input asp-for="StartDate" class="form-control" />
        <div class="form-text"><span asp-validation-for="StartDate" class="text-danger"></span></div>

    </div>
    <div class="mb-3">
        <label asp-for="EndDate" class="form-label"></label>
        <input asp-for="EndDate" class="form-control" />
        <div class="form-text"><span asp-validation-for="EndDate" class="text-danger"></span></div>

    </div>
    <div class="mb-3">
        <label asp-for="Product" class="form-label"></label>
        <input asp-for="Product" class="form-control" />
        <div class="form-text"><span asp-validation-for="Product" class="text-danger"></span></div>

    </div>
    <div class="mb-3">
        <label asp-for="ProductDate" class="form-label"></label>
        <input asp-for="ProductDate" class="form-control" />
        <div class="form-text"><span asp-validation-for="ProductDate" class="text-danger"></span></div>

    </div>
    <div class="mb-3">
        <label asp-for="IdPlot" class="form-label"></label>
        <select class="form-select" asp-for="IdPlot" asp-items="ViewBag.Plot">
            <option disabled selected value="">Choose a Plot</option>
        </select>
        <div class="form-text"><span asp-validation-for="IdPlot" class="text-danger"></span></div>
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Add</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
    <div asp-validation-summary="All"></div>
</form>

@section scripts {
    <partial name="IncludeValidation" />
}
