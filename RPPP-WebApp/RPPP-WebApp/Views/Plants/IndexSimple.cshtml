@using RPPP_WebApp.Models;
@model IEnumerable<Plant>
@{
    ViewData["Title"] = "Plant list";
}
<h2>Plant list</h2>

<table class="table table-sm table-striped table-hover" id="table-plant">
    <thead>
        <tr>
            <th>Plant Id</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var plant in Model)
        {
            <tr>
                <td class="text">@plant.IdPlant</td>
                <td class="text">@plant.Species</td>
                <td class="text">@plant.Quantity</td>
                <td class="text">@plant.Origin</td>

            </tr>
        }
    </tbody>
</table>

@section styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/dataTables.bootstrap5.min.css" />
}

@section scripts {
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#table-plant').DataTable();
        });
    </script>
}