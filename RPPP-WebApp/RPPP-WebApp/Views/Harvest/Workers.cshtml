@using RPPP_WebApp.ViewModels;
@using RPPP_WebApp.Models;
@model IEnumerable<WorkerViewModel>
<table class="table table-striped" id="table-items">
    <thead>
        <tr>
            @{
                string[] headers = { "IdPerson", "Salary", "Time", "First Name", "Last Name", "Number", "Mail", "Adresse" };
                for (int i = 0; i < headers.Length; i++)
                {
                    <th class="text-center col-sm-auto">
                        @headers[i]
                    </th>
                }
            }
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var worker in Model)
        {

            <tr>
                <td class="text-left col-sm-auto">
                    <input type="hidden" name="Workers.Index" value="@worker.IdPerson" />
                    <input type="hidden" name="Workers[@worker.IdPerson].IdPerson" value="@worker.IdPerson" />
                    @worker.IdPerson
                </td>
                <td class="text-center col-sm-auto">
                    <input name="Workers[@worker.IdPerson].Salary" class="form-control" value="@worker.Salary" />
                </td>
                <td class="text-center col-sm-auto">
                    <input name="Workers[@worker.IdPerson].Time" class="form-control" value="@worker.Time" />
                </td>
                <td class="text-left col-sm-auto">
                 
                    @worker.FirstName
                </td>
                <td class="text-left col-sm-auto">
                    @worker.LastName 
                </td>
                <td class="text-center col-sm-auto">
                    <input name="Workers[@worker.IdPerson].Number" class="form-control" value="@worker.Number" />
                </td>
                <td class="text-center col-sm-auto">
                    <input name="Workers[@worker.IdPerson].Mail" class="form-control" value="@worker.Mail" />
                </td>
                <td class="text-left col-sm-auto">
                    <input name="Workers[@worker.IdPerson].Adresse" class="form-control" value="@worker.Adresse" />

                </td>
                <td>
                    <button class="btn btn-sm btn-danger deleterow" title="Remove"><i class="fa fa-minus"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>

