@using RPPP_WebApp.ViewModels;
@model HarvestViewModel
@{
    ViewBag.Title = "Edit Harvest";
}

<div class="container">
    <form method="post" asp-action="Edit"
          asp-route-page="@ViewBag.Page"
          asp-route-sort="@ViewBag.Sort"
          asp-route-ascending="@ViewBag.Ascending">
        <input type="hidden" asp-for="IdHarvest" />
        <div asp-validation-summary="All" class="form-group row"></div>

        <div class="form-group row">
            
            <label asp-for="StartHarvest" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-2">
                <input asp-for="StartHarvest" class="form-control datum" />
            </div>
            <label asp-for="EndHarvest" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-2">
                <input asp-for="EndHarvest" class="form-control datum" />
            </div>
            <div class="col-sm-2">
                <button id="save" type="submit" class="btn btn-sm btn-primary save" title="Save"><i class="fas fa-save"></i></button>

                <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />



                <a class="btn btn-sm btn-primary cancel"
                   asp-action="Edit"
                   asp-route-id="@Model.IdHarvest"
                   asp-route-page="@ViewBag.Page"
                   asp-route-sort="@ViewBag.Sort"
                   asp-route-ascending="@ViewBag.Ascending"
                   
                   title="Refresh">
                    <i class="fas fa-sync-alt"></i>
                </a>
                <a class="btn btn-sm btn-primary cancel"
                   asp-action="Index"
                   asp-route-page="@ViewBag.Page"
                   asp-route-sort="@ViewBag.Sort"
                   asp-route-ascending="@ViewBag.Ascending"
                   title="Cancel">
                    <i class="fas fa-undo-alt"></i>
                </a>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="QuantityHarvest" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-1">
                <input asp-for="QuantityHarvest" class="form-control" />
            </div>
            <div class="col-sm-2">
                <label asp-for="IdPlant" class="form-label"></label>
                <select class="form-select" asp-for="IdPlant" asp-items="ViewBag.Plant">
                    <option selected value="">Choose a Plant</option>
                </select>
                <div class="form-text"><span asp-validation-for="IdPlant" class="col-sm-2"></span></div>

            </div>
        </div>

        <div class="form-group row">
            <label asp-for="UseHarvest" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-2">
                    <input asp-for="UseHarvest" class="form-control" />
                </div>
           
            <label asp-for="CostHarvest" class="col-sm-1 col-form-label"></label>
            
            <div class="col-sm-2">
                <input asp-for="CostHarvest" class="form-control" />
            </div>

            <label asp-for="NameHarvest" class="col-sm-1 col-form-label"></label>
                <div class="col-sm-2">
                    <input asp-for="NameHarvest" class="form-control" />
                </div>
                <label asp-for="IdSale" class="form-label"></label>
                <select class="form-select" asp-for="IdSale" asp-items="ViewBag.Sale">
                    <option selected value="">Choose a Buyer</option>
                </select>
                <div class="form-text"><span asp-validation-for="IdSale" class="text-danger"></span></div>

        </div>
        <div class="col-sm-10">
            <partial name="Workers" model="Model.Workers" />
        </div>

    </form>
</div>



@section styles{
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css" />
}
@section scripts {
    <partial name="IncludeValidation" />
    <script src="~/js/harvest.js" asp-append-version="true"></script>
}