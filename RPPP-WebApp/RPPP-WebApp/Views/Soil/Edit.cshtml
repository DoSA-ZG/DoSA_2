@using RPPP_WebApp.Models;
@model Soil
@{
    ViewBag.title = "Edit Soil";
}
<form asp-route-id="@Model.IdSoil"
      asp-route-page="@ViewBag.Page"
      asp-route-sort="@ViewBag.Sort"
      asp-route-ascending="@ViewBag.Ascending"
      method="post">

    <div class="mb-3">
        <label asp-for="SoilName" class="form-label"></label>
        <input asp-for="SoilName" class="form-control" />
        <div class="form-text"><span asp-validation-for="SoilName" class="text-danger"></span></div>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index"
           asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           class="btn btn-secondary">Cancel</a>
    </div>
    <div asp-validation-summary="All"></div>

</form>
@section scripts {
    <partial name="IncludeValidation" />
}

