@using RPPP_WebApp.ViewModels;
@model KnownCustomerViewModel
@{
    ViewBag.title = "Edit Known Customer";
}



<div class="container">
    <form method="post" asp-action="Edit"
          asp-route-page="@ViewBag.Page"
          asp-route-sort="@ViewBag.Sort"
          asp-route-ascending="@ViewBag.Ascending">
        <input type="hidden" asp-for="IdPerson" />
        <div asp-validation-summary="All" class="form-group row"></div>

        <div class="form-group row">

            <label asp-for="FirstName" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-2">
                <input asp-for="FirstName" class="form-control " />
            </div>
            <label asp-for="LastName" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-2">
                <input asp-for="LastName" class="form-control " />
            </div>
            <div class="col-sm-2">
                <button id="save" type="submit" class="btn btn-sm btn-primary save" title="Save"><i class="fas fa-save"></i></button>

                <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />



                <a class="btn btn-sm btn-primary cancel"
                   asp-action="Edit"
                   asp-route-id="@Model.IdPerson"
                   asp-route-page="@ViewBag.Page"
                   asp-route-sort="@ViewBag.Sort"
                   asp-route-ascending="@ViewBag.Ascending"
                   title="Refresh">
                    <i class="fas fa-sync-alt"></i>
                </a>
                <a class="btn btn-sm btn-primary cancel"
                   asp-action="Index"
                   asp-route-page="@ViewBag.Page"
                   asp-route-sort="@ViewBag.Sort"
                   asp-route-ascending="@ViewBag.Ascending"
                   title="Cancel">
                    <i class="fas fa-undo-alt"></i>
                </a>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Number" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-2">
                <input asp-for="Number" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Mail" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-2">
                <input asp-for="Mail" class="form-control" />
            </div>

            <label asp-for="Adresse" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-2">
                <input asp-for="Adresse" class="form-control" />
            </div>
      
        </div>
      <div class="col-sm-10">
            <partial name="Requests" model="Model.Requests" />
        </div>

    </form>
</div>
@section styles{
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css" />
}
@section scripts {
    <partial name="IncludeValidation" />
    <script src="~/js/knowncustomer.js" asp-append-version="true"></script>
}
    
















































